CFLAGS = -g $(PROGCFLAGS) -I$(XVIEW_INC)

OBJS = wsystem.o chksv.o chkx.o
SRCS = wsystem.c chksv.c chkx.c
PROGNAME = wsystem
MANNAME = wsystem.1

$(PROGNAME): $(OBJS) support
	./linkit $(CC) $(CFLAGS) $(OBJS) -o $(PROGNAME) $(WINLIBS)

support:
	chmod +x linkit
	chmod +x svlibs

install: $(PROGNAME)
	$(STRIP) $(PROGNAME)
	-mv -f $(BINDIR)/$(PROGNAME) $(OLDBIN)/$(PROGNAME)
	-chmod $(PROGMOD) $(OLDBIN)/$(PROGNAME)
	mv -f $(PROGNAME) $(BINDIR)/$(PROGNAME)
	chmod $(PROGMOD) $(BINDIR)/$(PROGNAME)
	-diffmk $(MANDIR)/man1/$(MANNAME) $(MANNAME) man.diff
	@echo diffmked man page left in man.diff
	-rm $(MANDIR)/man1/$(MANNAME)
	cp $(MANNAME) $(MANDIR)/man1/$(MANNAME)
	chmod $(MANMOD) $(MANDIR)/man1/$(MANNAME)

clean:	
	-rm -f $(OBJS) $(PROGNAME) core 
	
lint:	$(SRCS) 
	$(LINT) $(LINTFLAGS) $(SRCS) $(LINTLIB) > lint

test:	$(PROGNAME)
	sh $(PROGNAME).tst

