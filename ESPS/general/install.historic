else
  echo doing clean $VERSION 
  for dir in  $DIRS
   do
    if test $dir != "../man"
    then 
     echo Cleaning $dir...
     set -x
     cd $dir
     $HERE/emake  $NFLAG clean
     cd ..
     $XOFF
    fi
   done
  exit 0
fi

